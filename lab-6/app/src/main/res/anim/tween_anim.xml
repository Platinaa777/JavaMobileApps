<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:anim/cycle_interpolator">
    <scale
        android:fromXScale="2.0"
        android:toXScale="0.5"
        android:fromYScale="2.5"
        android:toYScale="0.5"
        android:pivotX="30%"
        android:pivotY="30%"
        android:duration="3000" />

    <scale
        android:fromXScale="0.5"
        android:toXScale="2.5"
        android:fromYScale="0.5"
        android:toYScale="2.5"
        android:pivotX="70%"
        android:pivotY="70%"
        android:duration="4000"
        android:startOffset="1000" />

    <scale
        android:fromXScale="3"
        android:toXScale="3"
        android:fromYScale="4"
        android:toYScale="4"
        android:pivotX="90%"
        android:pivotY="90%"
        android:duration="5000" />

